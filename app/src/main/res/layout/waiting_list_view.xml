<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="800dp"
        android:layout_height="70dp"
        android:background="@drawable/list_box"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="68dp"
            android:background="#f8f3dd"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/list_seq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="480dp"
            android:layout_height="match_parent"
            android:weightSum="10">
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="25dp"
                android:gravity="center_vertical|center_horizontal"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="명"
                android:layout_weight="2"
                android:textSize="20dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_tel_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="25dp"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>

            <TextView
                android:id="@+id/btn_seat"
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:text="착석"
                android:textSize="25dp"
                android:background="#1ac553"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal"/>
            <LinearLayout
                android:layout_width="2px"
                android:layout_height="match_parent"></LinearLayout>
            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:text="취소"
                android:textSize="25dp"
                android:background="#f25407"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal"/>
        <LinearLayout
            android:layout_width="2px"
            android:layout_height="match_parent"></LinearLayout>
            <TextView
                android:id="@+id/btn_absence"
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:text="부재"
                android:background="#4592d9"
                android:textSize="25dp"
                android:textColor="#ffffff"
                android:gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
</LinearLayout>
